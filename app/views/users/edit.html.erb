<div class="container">
  <div class="row">

    <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no-image-icon.jpg", size: "100x100", class: "mt-2" %>

    <div class="col text-center">
      <h4 class="mt-5">プロフィール編集</h4>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
         <%= f.label :ニックネーム %>
         <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :自己紹介文 %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :写真 %>
          <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
        </div>
         <div class="form-group">
          <%= f.submit class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>




