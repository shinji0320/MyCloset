<div class="container">
  <div class="row">
    <div class="col">
      <table class='table'>
        <tr><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no-image-icon.jpg", size: "100x100" %></tr>
        <tr>
      	  <th>name</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= @user.introduction %></th>
        </tr>
        <tr>
      	  <th>follows</th>
      	  <th><%= link_to @user.followings.count, followings_path(@user) %></th>
        </tr>
        <tr>
      	  <th>followers</th>
      	  <th><%= link_to @user.followers.count, followers_path(@user) %></th>
        </tr>
        <tr>
          <th>
            <% if @user.id == current_user.id %>
              <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-secondary mt-3" %>
            <% end %>
          </th>
          <th><%= render 'relationships/follow_button', user: @user %></th>
        </tr>
      </table>











      <section>
        <h5>My Items</h5>
        <% @user.items.each do |item| %>
          <%= link_to item_path(item) do%>
            <%= attachment_image_tag item, :image, format: 'jpeg', fallback: "no-image-icon.jpg", size: "150x150", class: "m-1" %>
          <% end %>
        <% end %>
      </section>
    </div>
  </div>
</div>

