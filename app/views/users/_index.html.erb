<table class='table'>
  <thead>
   <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
   <% users.each do |user| %>
    <tr>
     <td>
       <%= link_to user_path(user) do %>
         <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no-image-icon.jpg", size: "100x100", class: "rounded-circle" %>
       <% end %>
      </td>
     <td>
       <%= link_to user_path(user) do %>
         <%=user.name %>
       <% end %>
      </td>
     <td>フォロー数: <%= user.followings.count%></td>
     <td>フォロワー数: <%= user.followers.count%></td>
    </tr>
   <% end %>
  </tbody>
</table>
