<!DOCTYPE html>
<html>
  <head>
    <title>MyCloset</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
  <nav class="header navbar navbar-expand-lg navbar-dark ">
    <div class="container">
      <a class="navbar-brand" href="/"><span>My Closet</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
         <% if user_signed_in? %>
           <li><%= link_to '投稿一覧', items_path, class: "fas fa-shopping-cart nav-link text-white m-3" %></li>
           <li><%= link_to 'MyCloset', user_path(current_user.id), class: "fas fa-shopping-cart nav-link text-white m-3" %></li>
           <li><%= link_to 'ユーザー一覧', users_path, class: "fas fa-shopping-cart nav-link text-white m-3" %></li>
           <li><%= link_to '投稿フォーム', new_item_path, class: "fas fa-shopping-cart nav-link text-white m-3" %></li>
           <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "fas fa-shopping-cart nav-link text-white m-3" %></li>
         <% else %>
           <li><%= link_to '投稿一覧', items_path, class: "fas fa-shopping-cart nav-link text-white m-3" %></li>
           <li><%= link_to 'about', homes_about_path, class: "fas fa-shopping-cart nav-link text-white m-3" %></li>
           <li><%= link_to "新規登録", new_user_registration_path, class: "fas fa-shopping-cart nav-link text-white m-3" %></li>
           <li><%= link_to "ログイン", new_user_session_path, class: "fas fa-shopping-cart nav-link text-white m-3" %></li>
         <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
    <p id="notice"><%= notice %></p>
    <%= render 'searchs/form' %>
    <%= yield %>
    <div class="footer py-3">
      <p class="text-center text-white">shinji.com</p>
    </div>
  </body>
</html>