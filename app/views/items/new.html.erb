<h1>アイテム登録</h1>
<%= form_with model: @item, local:true do |f| %>

   <h4>ジャンル</h4>
   <%= f.collection_select :genre_id, Genre.all, :id, :name  %>

  <h4>アイテム名</h4>
  <%= f.text_field :item %>

  <h4>店舗名（ブランド）</h4>
  <%= f.text_field :shop_name %>

  <h4>説明</h4>
  <%= f.text_area :detail %>

  <h4>写真</h4>
  <%= f.attachment_field :image %>

  <%= f.submit '投稿' %>
<% end %>