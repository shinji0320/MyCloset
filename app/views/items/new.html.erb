<div class="container">
  <div class="row">
    <div class="col">
      <h4>アイテム登録</h4>
      <%= form_with model: @item, local:true do |f| %>

        <div class="form-group">
          <%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name %>
        </div>

        <div class="form-group">
          <%= f.label :アイテム %>
          <%= f.text_field :item, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :ブランド %>
          <%= f.text_area :shop_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :説明 %>
          <%= f.text_area :detail, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :写真 %>
            <%= f.attachment_field :image, class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>

    </div>
  </div>
</div>