<% if item.favorited_by?(current_user) %>
  <p>
    <%= link_to item_favorites_path(item), {method: :delete, remote: true, id: "favorites_#{item.id}"} do %>
      ♥<%= item.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to item_favorites_path(item), {method: :post, remote: true, id: "favorites_#{item.id}"} do %>
      ♡<%= item.favorites.count %>
    <% end %>
  </p>
<% end %>