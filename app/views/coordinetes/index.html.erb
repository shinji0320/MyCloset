<div class="container">
  <div class="row">
    <%= render "coordinetes/form", coordinete: @coordinete %>
    <div class="col">
      <table class="table">
        <thead>
         <tr>
          <th>コーディネート名</th>
          <th>組み合わせ</th>
          <th colspan="3"></th>
         </tr>
        </thead>
        <tbody>
         <% @coordinetes.each do |coordinete| %>
          <tr>
            <td>
              <%= coordinete.name %>
            </td>
             <td>
              <% coordinete.coordinete_tables.each.with_index(1) do |coordinete_table, index| %>
                <%= "#{coordinete_table.item.name} #{'x' if index < coordinete.coordinete_tables.size}" %>
              <% end %>
            </td>
            <td><%= link_to "edit", edit_coordinete_path(coordinete), class: "btn btn-sm btn-success m-2" %></td>
            <td><%= link_to "destroy", coordinete_path(coordinete), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger m-2" %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
