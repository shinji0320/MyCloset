 <div class="container text-right m-3">
      <div class="row">
        <div class="col">
          <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal">
            コーディネートを追加
          </button>
        </div>
      </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">コーディネート登録</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% if current_user.items.empty? %>
              <p>先にアイテムを登録しましょう</p>
            <% else %>
              <%= form_with model: coordinete, url:coordinetes_path(coordinete), local:true do |f| %>
                <div class="modal-body">
                  <div class="form-group">
                   <%= f.label :アイテム① %>
                   <%= f.collection_select 'item_ids[0]', Item.where(user_id: current_user.id), :id, :name %>
                 </div>
  
                 <div class="form-group">
                   <%= f.label :アイテム② %>
                   <%= f.collection_select 'item_ids[1]', Item.where(user_id: current_user.id), :id, :name %>
                 </div>
  
                 <div class="form-group">
                   <%= f.label :アイテム③ %>
                   <%= f.collection_select 'item_ids[2]', Item.where(user_id: current_user.id), :id, :name %>
                 </div>
  
                 <div class="form-group">
                  <%= f.label :コーディネート名 %>
                  <%= f.text_area :name, placeholder: "ここへ記入", class: "form-control-file" %>
                </div>
                <div class="modal-footer">
                  <div class="form-group">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <%= f.submit "追加", class: 'btn btn-success'%>
                  </div>
                </div>
              <% end %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
