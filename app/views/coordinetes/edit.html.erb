<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @coordinete, local:true do |f| %>
        <div class="form-group">
          <%= f.label :アイテム① %><br >
          <%= f.collection_select 'item_ids[0]', Item.all, :id, :name %>
        </div>

        <div class="form-group">
          <%= f.label :アイテム② %><br >
          <%= f.collection_select 'item_ids[1]', Item.all, :id, :name %>
        </div>

        <div class="form-group">
          <%= f.label :アイテム③ %><br >
          <%= f.collection_select 'item_ids[2]', Item.all, :id, :name %>
        </div>

        <div class="form-group">
          <%= f.label :コーディネート名 %><br >
          <%= f.text_area :name, placeholder: "ここへ記入" %>
        </div>
        <div class="form-group">
          <%= f.submit "追加", class: 'btn btn-success'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
